            }
        ],
        "controls": [
            {
                "text_wrapper": {
                    "type": "button",
                    "size": [
                        312,
                        "100%c"
                    ],
                    "anchor_from": "bottom_left",
                    "anchor_to": "bottom_left",
                    "layer": 5,

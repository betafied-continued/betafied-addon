{
  "format_version": "1.8.0",
  "minecraft:spawn_rules": {
    "description": {
      "identifier": "minecraft:skeleton",
      "population_control": "monster"
    },
    "conditions": [
      {
        "minecraft:spawns_on_surface": {},
        "minecraft:spawns_underground": {},
        "minecraft:brightness_filter": {
          "min": 0,  // Changed from 0 to 7
          "max": 7,
          "adjust_for_weather": false  // Disabled
        },
        "minecraft:difficulty_filter": {
          "min": "easy",
          "max": "hard"
        },
        "minecraft:weight": {
          "default": 80
        },
        "minecraft:herd": {
          "min_size": 1,
          "max_size": 2
        },
        "minecraft:biome_filter": {
          "any_of": [
            {
              "all_of": [
                { "test": "has_biome_tag", "operator": "==", "value": "monster" },
                { "test": "has_biome_tag", "operator": "!=", "value": "frozen" },
                { "test": "has_biome_tag", "operator": "!=", "value": "mangrove_swamp" }
              ]
            },
            { "test": "has_biome_tag", "operator": "==", "value": "soulsand_valley" }
          ]
        }
      }
    ]
  }
}